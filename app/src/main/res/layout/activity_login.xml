<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <EditText
        android:layout_toRightOf="@+id/tv_useName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="用户名"
        android:inputType="textPersonName"
        android:id="@+id/et_useName"
        android:textSize="20dp"
        android:layout_marginTop="1dp"
        android:maxLines="1"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/tv_useName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="用户名:"
        android:textSize="20dp"
        android:layout_alignBaseline="@+id/et_useName"
        android:layout_alignBottom="@+id/et_useName"
        android:layout_alignParentStart="true" />
    <EditText
        android:layout_below="@id/et_useName"
        android:layout_toRightOf="@id/tv_useName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="用户密码"
        android:inputType="textPassword"
        android:id="@+id/et_usePassword"
        android:textSize="20dp"
        android:layout_marginTop="1dp"
        android:maxLines="1"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/tv_usePassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="密码:"
        android:textSize="20dp"
        android:layout_alignBaseline="@+id/et_usePassword"
        android:layout_alignBottom="@+id/et_usePassword"
        android:layout_alignParentStart="true" />
    <Button
        android:id="@+id/bt_login"
        android:text="登陆"
        android:textSize="20dp"
        android:layout_below="@id/tv_usePassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/bt_register"
        android:text="注册"
        android:textSize="20dp"
        android:layout_toRightOf="@id/bt_login"
        android:layout_below="@id/tv_usePassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/bt_sinaLogin"
        android:text="新浪微博账号登陆"
        android:textSize="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bt_login"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bt_sinaLogin"
        android:layout_toStartOf="@+id/et_usePassword"
        android:id="@+id/tv_tokenView" />
</RelativeLayout>